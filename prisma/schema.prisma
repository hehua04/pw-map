generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Posts {
  id          Int      @id @default(autoincrement())
  name        String
  coordinate  String
  address     String
  description String
  user        String
  pickupTime  String
  station     String
  stamp       String
  zipcode     Int
  status      Int
  format      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("posts")
}
